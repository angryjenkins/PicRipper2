    {{#each data}}
      <div class="col-xs-12 col-sm-6 col-lg-4" class="image-slide-grid" data-toggle="modal" data-target="#{{this.id}}-modal" style="
        background-image:url({{this.url}});
        background-size:cover;
        border: 2px solid white;
        border-radius: 12px;
        height:300px;">
      </div>

      <div class="modal fade" id="{{this.id}}-modal" tabindex="-1" role="dialog" aria-labelledby="{{this.origin}}{{this.id}}-modalLabel">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="{{this.id}}-modal">{{this.title}}</h4>
              <p>added on {{this.createdAt}}</p>
            </div>
            <div class="modal-body">
              <div class="col-md-12">
                <img src="{{this.url}}" alt="{{this.origin}} #{{this.id}}" style="max-width:100%;">
              </div>
            </div>
            <div class="col-md-12">
              <form class="form-{{this.id}}" action="/note" method="post">
                <div class="form-group">
                  <label for="#note-{{this.id}}"></label>
                  <input type="text" class="form-control" id="note-{{this.id}}" placeholder="Add a note.">
                </div>
              </form>
            </div>
            <div class="modal-footer" style="margin-top:12px;">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary disabled">Save Note</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
